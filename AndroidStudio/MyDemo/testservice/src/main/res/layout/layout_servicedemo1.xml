<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/btn_ServiceDemo1_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动ServiceDemo1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止ServiceDemo1"
        android:id="@+id/btn_ServiceDemo1_stop"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动IntentServiceDemo1"
        android:id="@+id/btn_IntentServiceDemo1_start"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止IntentServiceDemo1"
        android:id="@+id/btn_IntentServiceDemo1_stop"
        />
</LinearLayout>
